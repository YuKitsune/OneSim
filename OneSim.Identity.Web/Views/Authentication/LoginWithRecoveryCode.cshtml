@using OneSim.Identity.Web
@using OneSim.Identity.Web.Controllers
@model OneSim.Identity.Web.Models.ViewModels.Authentication.TwoFactorRecoveryCodeLoginViewModel
@{
    ViewData["Title"] = "Recovery Code Verification";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<form id="loginForm" class="ui large form" asp-action="@nameof(AuthenticationController.LoginWithRecoveryCode)" asp-controller="@Utils.GetControllerName(nameof(AuthenticationController))">
    <div class="ui stacked segment">

        @* Validation message *@
        <div class="ui error message" style="padding: 5px;">
            @Html.ValidationSummary()
        </div>

        <p>
            You have requested to log in with a recovery code. <br />
            This login will not be remembered until you provide an authenticator app code at login or disable 2FA and login again.
        </p>

        @* 2FA code *@
        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                @Html.TextBoxFor(m => m.RecoveryCode, new { placeholder = "Recovery code" })
            </div>
        </div>

        @* Anti-forgery token *@
        @Html.AntiForgeryToken()
        
        @* Return URL *@
        @Html.HiddenFor(m => m.CallbackUri);

        @* Log In button *@
        <button class="ui fluid large blue button" type="submit">Log In</button>
    </div>
</form>