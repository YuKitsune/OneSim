@model OneSim.Identity.Web.ViewModels.Account.LogoutViewModel
@{
    ViewData["Title"] = "Log Out";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<form id="logoutForm" class="ui large form" asp-action="Logout" asp-controller="Account" method="post">
    <div class="ui stacked segment">
        
        <p>
            Do you wish to log out of OneSim?
        </p>

        @* Anti-forgery token *@
        @Html.AntiForgeryToken()

        @* Return URL *@
        @Html.HiddenFor(m => m.LogoutId)

        @* Log In button *@
        <button class="ui fluid large blue button" type="submit">Yes</button>
    </div>
</form>